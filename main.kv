#Kivy
<Main>:
    id:index
    BoxLayout:
        size_hint: 1,1
        padding: [8, 10]
        orientation: 'vertical'
        spacing: 10
        canvas:
            Color:
                rgb: 0.13, 0.14, 0.17
            Rectangle:
                size:self.size
                pos:self.pos
        Button:
            size_hint: 1,1
            background_normal: 'img/btn_back.png'
            background_down: 'img/btn_back_down.png'
            text: 'Modelo'
            font_size: 15
            size: self.size
            pos: self.pos
            on_press:index.showModelo()
        Button:
            background_normal: 'img/btn_back.png'
            background_down: 'img/btn_back_down.png'
            text:'Dominio'
            font_size:15
            size: self.size
            pos: self.pos
            on_press: index.showDominio()
        Button:
            size_hint: 1,1
            background_normal: 'img/btn_back.png'
            background_down: 'img/btn_back_down.png'
            text: 'Condiciones de Contorno'
            font_size: 15
            size: self.size
            pos: self.pos
            on_press: index.showCondiciones()
        Button:
            size_hint: 1,1
            background_normal: 'img/btn_back.png'
            background_down: 'img/btn_back_down.png'
            text: 'Malla'
            font_size: 15
            size: self.size
            pos: self.pos
            on_press: index.showMalla()
        Button:
            size_hint: 1,1
            background_normal: 'img/btn_back.png'
            background_down: 'img/btn_back_down.png'
            text: 'Tabla de conectividades'
            font_size: 15
            size: self.size
            pos: self.pos
            on_press: index.showTabla()
        Button:
            size_hint: 1,1
            background_normal: 'img/btn_back.png'
            background_down: 'img/btn_back_down.png'
            text: 'MEF/Comps. de Matrices'
            font_size: 15
            size: self.size
            pos: self.pos
            on_press: index.showMef()
        Button:
            size_hint: 1,1
            background_normal: 'img/btn_back.png'
            background_down: 'img/btn_back_down.png'
            text: 'Ensamblaje'
            font_size: 15
            size: self.size
            pos: self.pos
            on_press: index.showEnsamblaje()
        Button:
            size_hint: 1,1
            background_normal: 'img/btn_back.png'
            background_down: 'img/btn_back_down.png'
            text: 'Despedida'
            font_size: 15
            size: self.size
            pos: self.pos
            on_press: index.showDespedida()

<Container>:
    size_hint: 5,1
    canvas:
        Rectangle:
            size:self.size
            pos:self.pos
            source: 'img/background.png'

<ImageMain>:
    Image:
        source:'img/Main.png'

<Modelo>:
    Image:
        size_hint: 1,1
        source:'img/Modelo.png'

